<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.verNANDo57.rulebook_educational.AppSectionSelectionActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_in_chooseyourdestiny_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar_height"
        android:background="@drawable/app_toolbar"
        android:layout_margin="@dimen/app_toolbar_margin"
        app:navigationIcon="@drawable/ic_view_list_black"
        app:title="@string/rules" />

    <ScrollView
        android:id="@+id/choose_destiny_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/main_rules"
                    style="@style/RulebookButtonHuge"
                    android:text="@string/main_rules"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hugebutton_default_height" />

                <Button
                    android:id="@+id/lexicon_rules"
                    style="@style/RulebookButtonHuge"
                    android:text="@string/lexicon_rules"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hugebutton_default_height" />

                <Button
                    android:id="@+id/schemes_and_tables"
                    style="@style/RulebookButtonHuge"
                    android:text="@string/tables_and_schemes_rules"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hugebutton_default_height" />

                <Button
                    android:id="@+id/analyze_methods"
                    style="@style/RulebookButtonHuge"
                    android:text="@string/analyze_methods"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hugebutton_default_height" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>