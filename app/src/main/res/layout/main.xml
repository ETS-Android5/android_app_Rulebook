<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<ImageView
			android:layout_width="@dimen/app_logo_in_main_width_in_layout"
			android:layout_height="@dimen/app_logo_in_main_height_in_layout"
			android:layout_marginTop="10dp"
			android:id="@+id/imageview_in_main"
			android:layout_gravity="center"
			android:background="@drawable/app_book_colored" />

		<TextView
			android:id="@+id/mainTextView1"
			style="@style/Headlines"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_about_name"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"/>

		<Button
			android:id="@+id/app_rules_button"
			style="@style/RulebookButtonHuge"
			android:text="@string/rules"
			android:layout_width="match_parent"
			android:layout_height="@dimen/app_hugebutton_default_height" />

		<Button
			android:id="@+id/app_dictionaries"
			style="@style/RulebookButtonHuge"
			android:text="@string/dictionaries"
			android:layout_width="match_parent"
			android:layout_height="@dimen/app_hugebutton_default_height" />

		<Button
			android:id="@+id/app_bookmarks"
			style="@style/RulebookButtonHuge"
			android:text="@string/app_bookmarks"
			android:layout_width="match_parent"
			android:layout_height="@dimen/app_hugebutton_default_height" />

		<Button
			android:id="@+id/search_function"
			style="@style/RulebookButtonHuge"
			android:text="@string/search"
			android:layout_width="match_parent"
			android:layout_height="@dimen/app_hugebutton_default_height" />

		<Button
			android:id="@+id/settings_button"
			style="@style/RulebookButtonHuge"
			android:text="@string/settings"
			android:layout_width="match_parent"
			android:layout_height="@dimen/app_hugebutton_default_height" />

		<Button
			android:id="@+id/about_app_button"
			style="@style/RulebookButtonHuge"
			android:text="@string/about_app"
			android:layout_width="match_parent"
			android:layout_height="@dimen/app_hugebutton_default_height" />

		<Button
			android:id="@+id/app_exit_button"
			style="@style/RulebookButtonHuge"
			android:text="@string/app_exit"
			android:layout_width="match_parent"
			android:layout_height="@dimen/app_hugebutton_default_height" />

	</LinearLayout>

</ScrollView>



