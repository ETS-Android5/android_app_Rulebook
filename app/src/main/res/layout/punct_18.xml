<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/punctuationButton17_container"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/punct_18"
        android:id="@+id/punctuationButton18"/>

    <LinearLayout
        android:id="@+id/punctuationButton18_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_space_height"/>

        <Button
            android:id="@+id/punct18mainButton1"
            style="@style/RulebookButtonTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/punct_18_64" />

        <Button
            android:id="@+id/punct18mainButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/punct_18_65" />

        <Button
            android:id="@+id/punct18mainButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/punct_18_66" />

        <Button
            android:id="@+id/punct18mainButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/punct_18_67" />

        <Button
            android:id="@+id/punct18mainButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/punct_18_68" />

        <Button
            android:id="@+id/punct18mainButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/punct_18_69"
            style="@style/RulebookButtonBottom"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_space_height"/>

    </LinearLayout>
</LinearLayout>