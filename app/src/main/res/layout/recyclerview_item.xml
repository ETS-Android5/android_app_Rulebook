<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_view_item_card"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:id="@+id/cardview_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_searchview_recyclerview_item_shape"
        android:layout_margin="4dp">
        <RelativeLayout
            android:id="@+id/imageView_layout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="center">
        <ImageView
            android:id="@+id/search_item_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="2dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/search_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView_layout"
            android:text="@string/app_status_value_null"
            style="@style/TextImportantEveryTheme"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:textIsSelectable="false"/>
        <TextView
            android:id="@+id/search_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_item_title"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageView_layout"
            android:text="@string/app_status_value_null"
            style="@style/TextRegularEveryTheme"
            android:textSize="13sp"
            android:focusable="false"
            android:textIsSelectable="false"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>