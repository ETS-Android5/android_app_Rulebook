<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTopBarTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title</item>
        <item name="android:textColor">@color/bottomappbar_items_color_everytheme</item>
        <item name="android:textSize">@dimen/appbar_title_textsize_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/coloraccent</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextImportantEveryTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextRegularEveryTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="RulebookButtonEveryThemeTop" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/btn_anim_zoom</item>
        <item name="android:background">@drawable/buttonshape_top_rightandleft</item>
    </style>

    <style name="RulebookButtonEveryThemeBottom" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/btn_anim_zoom</item>
        <item name="android:background">@drawable/buttonshape_bottom_rightandleft</item>
    </style>

    <style name="RulebookButtonDefault" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_color_default</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/btn_anim_zoom</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RulebookChooseDestinyButtonLeftToRight" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/btn_anim_translate_lefttoright</item>
        <item name="android:background">@drawable/buttonshape_onlyright_bottomandtop</item>
        <item name="android:textSize">@dimen/app_choose_your_destiny_menu_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/app_choose_your_destiny_menu_button_width</item>
        <item name="android:layout_height">@dimen/app_choose_your_destiny_menu_button_height</item>
    </style>

    <style name="RulebookChooseDestinyButtonRightToLeft" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/btn_anim_translate_righttoleft</item>
        <item name="android:background">@drawable/buttonshape_onlyleft_bottomandtop</item>
        <item name="android:textSize">@dimen/app_choose_your_destiny_menu_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/app_choose_your_destiny_menu_button_width</item>
        <item name="android:layout_height">@dimen/app_choose_your_destiny_menu_button_height</item>
    </style>

</resources>